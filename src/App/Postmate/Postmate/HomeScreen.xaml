<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Postmate.HomeScreen"
             Title="Postmate">

    <Grid x:Name="mainGrid" RowSpacing="0" ColumnSpacing="20" Padding="20,20,20,20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button x:Name="newUser_Button" Text="New User"
                Clicked="newUser_Button_Clicked"
                FontAttributes="Bold" FontSize="Large"
                Grid.Row="1" Grid.Column="0"
                BackgroundColor="Black"  TextColor="White" />

        <Button x:Name="existingUser_Button" Text="Existing User"
                Clicked="existingUser_Button_Clicked"
                FontAttributes="Bold" FontSize="Large"
                Grid.Row="1" Grid.Column="1"
                BackgroundColor="Black"  TextColor="White" />

        <Label x:Name="Tagline_Label" Grid.ColumnSpan="2" Grid.RowSpan="3" VerticalOptions="End" HorizontalOptions="CenterAndExpand" />

    </Grid>
</ContentPage>